<?xml version="1.0" encoding="UTF-8"?><plug-in>
    <!-- Plugin Informations -->
    <name>workflow-editrecord</name>
    <class>fr.paris.lutece.plugins.workflow.modules.editrecord.service.EditRecordPlugin</class>
    <version>3.0.4</version>
    <documentation/>
    <installation/>
    <changes/>
    <user-guide/>
    <description>module.workflow.editrecord.module.description</description>
    <provider>module.workflow.editrecord.module.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/workflow/modules/editrecord/editrecord.png</icon-url>
    <copyright>Copyright 2001-2012 Mairie de Paris</copyright>
	<core-version-dependency>
		<min-core-version>3.1.2</min-core-version>
		<max-core-version/>	
	</core-version-dependency>
	
	<!-- if the plugin must have a connection pool with parameter : 1 - yes, 0 - no -->	
    <db-pool-required>1</db-pool-required>

	<!-- Xpage configuration -->
    <applications>
        <application>
            <application-id>workflow-editrecord</application-id>
            <application-class>fr.paris.lutece.plugins.workflow.modules.editrecord.web.EditRecordApp</application-class>
        </application>
    </applications>
    
    <!-- Specific plugin JAVASCRIPT -->
	<javascript-files>
        <javascript-files-scope>xpage</javascript-files-scope>
        <javascript-file>directory/uploadify/jquery.uploadify.v2.1.4.min.js</javascript-file>
    </javascript-files>
    <javascript-files>
        <javascript-files-scope>xpage</javascript-files-scope>
        <javascript-file>directory/uploadify/swfobject.js</javascript-file>
    </javascript-files>
    <javascript-files>
        <javascript-files-scope>xpage</javascript-files-scope>
        <javascript-file>directory/directoryupload.js</javascript-file>
    </javascript-files>
</plug-in>